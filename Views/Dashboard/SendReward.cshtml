@model ListOfSchoolViewModel

@{
    ViewData["Title"] = "Send Reward";
}
 <div class="my-container">

    <div class="back-img">
        <div class="text-area">
            <p> 
                Gift to Show appreciation <br />to teacher. <span class="text-money">Send the money!</span>
            </P>
        </div>
        <div class="image-area">
            <img src="~/Image/money.png" id="money"/>
        </div>

    </div>

    
    <div class="search-all">
            <p>
                All Schools
            </p>

                <div class="search-list">
                    <form class ="search-list-box" method="get" asp-action="SendReward">
                        <input class="search-list-input" name="searchString" placeholder="Name of School" value="@ViewBag.SearchString" />
                        <img class="search-list-icon" src="~/images/search-alt-1.png" />
                        <button class="search-list-btn" type="submit"><img src="~/Image/search.png"/> Search</button>
                    </form>
                </div>
    </div>
    <br />
    <br />
   
    <div class="LOS-main">
        <div class="LOS-inner">
            <div class="LOS-upper-text">
                <p>
                    List Of Schools
                </p>
            </div>
            <div class="LOS-inner-list">
                @foreach (var school in Model.Schools)
                {
                    <div class="LOS-list">
                        <p>
                            <a asp-action="teachers" asp-route-schoolName= "@school" asp-controller="dashboard">@school</a>
                        </p>
                        <img src="~/Image/Icon.png"/>
                    </div>
                    <hr/>
                }
            </div>
        </div>
    </div>

       

            <div class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <a asp-action="SendReward" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchString="@ViewBag.SearchString">Previous</a>
                }

                <p class="page-numb">Page @Model.CurrentPage of @Model.TotalPages</p>

                @if (Model.CurrentPage < Model.TotalPages && Model.Schools.Count == 5)
                {
                    <a asp-action="SendReward" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchString="@ViewBag.SearchString">Next</a>
                }
            </div>

        
        
    

</div>