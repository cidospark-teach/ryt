    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/fundWalllet-paySuccess.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/neo.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MessagingUnderStudentDashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StudentDashboardListOfSchools.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/student-profile-edit.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/og-murphy-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/EditTeacherProfile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/TeacherChangePassword.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/teacher-funding-received.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/teacher-received-sent-history.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/UserManagementApp.styles.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="~/css/StudentProfileModal-ryts-2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StudentSendModal-ryts-2.css" asp-append-version="true" />
