<body class="animated fadeIn" >
    
    <Partial name="_NavBarPartial" />
    <div class="drawer-panel">
        <div class="side-drawer">
            <div class="side-drawer-inner">
                <br/>
                <a asp-action="Overview" asp-controller="Dashboard" id="active-side-menu">
                    <p>Overview</p>
                </a>

                <a asp-action="Messages" asp-controller="Dashboard">
                    <p>Message</p>
                </a>

                @if(userRoles.Any(x => x.ToLower().Equals("student")))
                {
                    <a asp-action="SendReward" asp-controller="dashboard"><p>Send Reward</p></a>

                }

            </div>
            <div class="sperator"></div>
            <div class="side-drawer-inner">
                <a data-bs-target="#logout" data-bs-toggle="modal">
                    <p>Logout</p></a>
            
            </div>

        </div>
       
        <div class="drawer-content-area">
           
            <div class="drawer-content-area-inner">
                @RenderBody()

            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
